/* pages/binding/binding.wxss */
.nav{
  width: 100%;
  overflow: hidden;
  position: relative;
  top: 0;
  left: 0;
  z-index: 10;
}
.nav-title{
  width: 100%;
  height: 45px;
  line-height: 45px;
  text-align: center;
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 10;
  font-size:36rpx;
}
.nav .back{
  width: 22px;
  height: 22px;
  position: absolute;
  bottom: 0;
  left: 0;
  padding: 10px 15px;
}
.bg-white{
  background-color: #ffffff;
}
.bg-gray{
  background-color: rgba(250,250,250,1);
}
.overflow{
  overflow: auto;
}
.hidden{
  overflow: hidden;
}

.user_img {
  float: left;
  width: 70rpx;
	height: 70rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-top: 10rpx;
  margin-right: 20rpx;
  margin-left: 20rpx;
}
.user_img image {
  width: 50rpx;
	height: 50rpx;
  border-radius: 50%;
}
.user_name{
  float:left;
  font-size: 28rpx;
}
.user_num{
  float:left;
  font-size: 30rpx;
}
.binding_box{
  width:100%;
  height:100%;
  overflow: hidden;
  background:#fafafa;
}
.binding_imgbox{
  width:100%;
  height:auto;
  overflow: hidden;
  text-align: center;
}
.binding_box .binding_img{
  width:140rpx;
  height:140rpx;
  background:#fff;
  margin:166rpx 0 150rpx;
  display: inline-block;
  text-align: center;
  border-radius:50%;
  position: relative;
  background:rgba(255,255,255,1);
  box-shadow:0px 4px 20px rgba(68,68,68,0.1);
}
.binding_box .binding_img image{
  width:61rpx;
  height:60rpx;
  position: absolute;
  top:0;
  right:0;
  left:0;
  bottom:0;
  margin:auto;
}
.binding_carbox{
  width:90%;
  height:auto;
  overflow: hidden;
  margin: 0 5%;
}
.binding_carbox view{
  line-height:80rpx;
  height:auto;
  width:100%;
  overflow: hidden;
}
.binding_carbox view text{
  font-size: 28rpx;
  color:#999;
  display: block;
  float:left;
}
.binding_carbox view span{
  font-size: 34rpx;
  color:#444;
  display: block;
  float:right;
}
.binding_btn{
  width:90%;
  height:auto;
  overflow: hidden;
  margin:61rpx 5%;
}
.binding_btn button{
  height:100rpx;
  font-size: 34rpx;
  text-align: center;
  line-height: 100rpx;
  width:100%;
  border:none;
  border-radius:80rpx;
}
.binding_btn button:nth-of-type(1){
  background:#fddb00;
  color:#222;
  margin-bottom: 50rpx;
}
.binding_btn button:nth-of-type(2){
  background:#ffffff;
  color:#999;
  border:1px solid #E0E0E0;
}
button::after{
  border:none;
}


/* 遮罩 */
button::after{
  border:none;
}
.mask_box{
  width:100%;
  height:100%;
  position: fixed;
  background: transparent;
  z-index:999;
}
.mask_mid{
  width:100%;
  height:400rpx;
  background: #fff;
  position: absolute;
  top:0;
  padding: 30rpx 0;
  text-align: center;
  box-shadow:0px 10px 10px rgba(170,170,170,0.23);
}
.mask_test{
  width:250rpx;
  height:100rpx;
  background:rgba(253,219,0,1);
  box-shadow:0px 10px 20px rgba(253,219,0,0.35);
  opacity:1;
  border-radius:50px;
  margin:40rpx auto;
}
.mask_today{
  width:250rpx;
  height:100rpx;
  background:rgba(34,34,34,1);
  box-shadow:0px 10px 20px rgba(34,34,34,0.23);
  opacity:1;
  border-radius:50px;
  color:#FDDB00;
  margin: 0 auto 40rpx auto;
}
.mask_mid span{
  font-size:36rpx;
  color:rgba(153,153,153,1);
  text-align: center;
  line-height: 400rpx;
}