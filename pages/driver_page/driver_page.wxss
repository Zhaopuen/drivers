/* pages/driver_page/driver_page.wxss */
page{
  box-sizing: border-box;
  padding: 0 50rpx;
}
/* 司机信息 */
.driver_info {
  margin-top: 120rpx;
  margin-bottom: 60rpx;
  overflow: hidden;
}
.driver_info .user_img {
  float: left;
  width: 100rpx;
	height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-top: 35rpx;
  margin-right: 30rpx;
}
.driver_info .user_img image {
  width: 100rpx;
	height: 100rpx;
  border-radius: 50%;
}
.driver_info .user_text {
  float: left;
  margin-top: 35rpx;
}
.driver_info .user_text .name {
	font-size: 48rpx;
	color: #444444;
  margin-bottom: 18rpx;
}
.phone {
	font-size: 28rpx;
	color: #cccccc;
}
.driver_info .icoimg {
  float: right;
  width: 50rpx;
  height: 50rpx;
  margin-top: 56rpx;
}
.driver_info .icoimg image {
  width: 50rpx;
  height: 50rpx;
}
/* 完成数据 */
.complete_num {
	height: 260rpx;
	background-color: #ffffff;
	box-shadow: 0rpx 10rpx 80rpx 0rpx rgba(68, 68, 68, 0.15);
	border-radius: 40rpx;
  overflow: hidden;
  margin-bottom: 40rpx;
}
.complete_num .complete_list {
  text-align: center;
  float: left;
  width: 50%;
}
.complete_num .complete_list .complete_text {
  font-size: 24rpx;
	line-height: 45rpx;
	color: #aaaaaa;
  margin-top: 60rpx;
  margin-bottom: 40rpx;
}
.complete_num .complete_list .complete_number {
  font-size: 48rpx;
	line-height: 45rpx;
	letter-spacing: -2.4rpx;
	color: #444444;
}
/* 其他功能 */
.nav_function {
  overflow: hidden;
}
.nav_function .nav_list {
  width: 50%;
  float: left;
  margin-bottom: 30rpx;
}
.nav_function .nav_list .navlist_Box {
	width: 310rpx;
	height: 310rpx;
	background-color: #ffffff;
	box-shadow: 0rpx 10rpx 60rpx 0rpx rgba(68, 68, 68, 0.1);
	border-radius: 40rpx;
  box-sizing: border-box;
  padding: 40rpx;
}
.nav_function .nav_list .navlist_Box .navlist_ico {
  margin-top: 10rpx;
  margin-bottom: 40rpx;
}
.nav_function .nav_list .navlist_Box .navlist_ico image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}
.nav_function .nav_list .navlist_Box .navlist_title {
  font-size: 28rpx;
	line-height: 48rpx;
	color: #444444;
}
.nav_function .nav_list .navlist_Box .navlist_text {
  font-size: 24rpx;
	line-height: 48rpx;
	color: #aaaaaa;
}
.nav_function .nav_list .navlist_Box .navlist_text_cola {
  color: #fddb00;
}