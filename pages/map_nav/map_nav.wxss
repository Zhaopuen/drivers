/* pages/map_nav/map_nav.wxss */
/* 订单信息 */
.order {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
	height: 180rpx;
	background-color: #ffffff;
	box-shadow: 0px 10rpx 20rpx 0px rgba(170, 170, 170, 0.3);
  box-sizing: border-box;
  padding: 40rpx 26rpx;
  overflow: hidden;
  z-index: 9999999;
}
.order .order_info {
  float: left;
}
.order .order_info .order_title {
  font-size: 36rpx;
	color: #444444;
  margin-bottom: 10rpx;
}
.order .order_info .order_title text {
  font-weight: bold;
}
.order .order_info .order_text text{
  font-size: 28rpx;
	color: #999999;
  vertical-align: middle;
}
.order .order_info .order_text image {
  width: 50rpx;
  height: 50rpx;
  vertical-align: middle;
  margin-right: 4rpx;
}
.order .order_ico {
  float: right;
  width: 50rpx;
  height: 50rpx;
  position: relative;
  margin-top: 20rpx;
}
.order .order_ico image{
  width: 50rpx;
  height: 50rpx;
}
.order .order_ico .soli {
  position: absolute;
	width: 30rpx;
	height: 30rpx;
	background-color: #fddb00;
  top: -10rpx;
  right: -10rpx;
  border-radius: 50%;
  font-size: 20rpx;
  text-align: center;
  line-height: 30rpx;
}
.order .order_icos {
  float: right;
  width: 50rpx;
  height: 50rpx;
  margin-right: 50rpx;
  margin-top: 20rpx;
}
.order .order_icos image{
  width: 54rpx;
  height: 54rpx;
}
/* 地图 */
.map_container {
  position: fixed;
  left: 0;
  width: 100%;
  top: 132rpx;
  bottom: 165rpx;
}
#map {
  height: 100%;
}

/* 店铺 */
.store {
  box-sizing: border-box;
  padding: 45rpx 24rpx;
  position: fixed;
  z-index: 3;
  left: 0;
  bottom: 160rpx;
	width: 100%;
	height: 140rpx;
	background-color: #ffffff;
	box-shadow: 0rpx -5rpx 10rpx 0rpx rgba(170, 170, 170, 0.2);
  overflow: hidden;
}
.store .store_ico {
  float: left;
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
}
.store .store_ico image {
  width: 50rpx;
  height: 50rpx;
}
.store .store_name {
  font-size: 28rpx;
	color: #222222;
  float: left;
  line-height: 50rpx;
}
.store .store_ftico {
  float: right;
}
.store .store_ftico image {
  width: 50rpx;
  height: 50rpx;
  margin-left: 50rpx;
}
/* 提示 */
.hint {
	background-color: #fff;
  box-sizing: border-box;
  padding: 15rpx 24rpx;
  position: fixed;
  z-index: 2;
  bottom: 0;
	width: 100%;
  left: 0;
  height: 160rpx;
  overflow: hidden;
}
.hint_ft {
  float: left;
  margin-top: 20rpx;
}
.hint_ft .ft_text {
  font-size: 36rpx;
	color: #222;
  margin-bottom: 6rpx;
}
.hint_ft .ft_text text {
  font-weight: 600;
}
.hint_ft .ft_bot {
  font-size: 28rpx;
	color: #373737;
}
.hint_ft .ft_bot text {
  font-weight: 600;
}
.hint_rt {
  float: right;
  text-align: right;
  margin-top: 10rpx;
}
.hint_rt .rt_text {
  box-sizing: border-box;
  padding-right: 18rpx;
  font-size: 36rpx;
	color: #999999;
}
.hint_rt .rt_text text {
  color: #fddb00;
  font-weight: 600;
}
.hint_rt .rt_bottom {
  overflow: hidden;
}
.hint_rt .rt_bot {
  text-align: center;
  line-height: 58rpx;
  font-size: 24rpx;
	color: #222222;
  margin-top: 28rpx;
  float: right;
}
.hint_rt .pause {
  float: left;
  font-size: 24rpx;
  color: #999999;
  line-height: 58rpx;
  margin-right: 20rpx;
}
/* nav-ico */
.navico {
  position: fixed;
  bottom: 320rpx;
  right: 20rpx;
  width: 80rpx;
	height: 80rpx;
	background-color: #ffffff;
	box-shadow: 0rpx 5rpx 5rpx 0rpx rgba(170, 170, 170, 0.5);
  border-radius: 50%;
  z-index: 7777777;
}
.navico image {
  display: block;
  margin: 15rpx auto;
  width: 50rpx;
  height: 50rpx;
}
/* 新订单 */
.approve {
  position: fixed;
  left: 45rpx;
  right: 45rpx;
  top: 150rpx;
  overflow: hidden;
  z-index: 99;
}
.approve .approve_ft {
  float: left;
	width: 100%;
	height: 122rpx;
	background-color: rgba(253,219,0,1);
	border-radius: 20rpx;
  box-sizing: border-box;
  padding: 15rpx 30rpx;
  opacity: 1;
  transition: .2s ease all;
}
.order_box .order_left{
  width:70%;
  float:left;
}
.order_name{
  color: #404040;
  font-size: 34rpx;
  display: block;
}
.approve_txt{
  color: #404040;
  font-size: 26rpx;
}
.order_right button{
  float:right;
  font-size: 28rpx;
  width:140rpx;
  height:80rpx;
  background:rgba(255,255,255,1);
  opacity:1;
  line-height: 80rpx;
  margin-top: 8rpx;
}
.approve .approve_transition {
  opacity: 0;
}
.approve .approve_ft .approve_ico {
  width: 50rpx;
  height: 50rpx;
  float: left;
}
