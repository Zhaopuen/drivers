/**driver_suspend.wxss**/

/* 暂停停运 */

.approve {
  left: 0;
  top: 0;
  z-index: 9;
  width: 100%;
  box-sizing: border-box;
  padding: 0 60rpx;
  padding-top: 160rpx;
  overflow: hidden;
}

.approve .countDownTimeView {
  text-align: center;
  font-size: 72rpx;
  color: #222;
}

/* 追加数量 */
.add_to {
	width: 180rpx;
	height: 81rpx;
	border-radius: 40rpx;
	border: solid 2rpx #e0e0e0;
  margin: 0 auto;
  text-align: center;
  line-height: 81rpx;
  font-size: 24rpx;
	color: #999999;
}
/* 待清运 */

.content {
  margin-top: 40rpx;
}
.content .call_btn_box {
  position: relative;
  width: 400rpx;
  height: 300rpx;
  left: 50%;
  transform: translateX(-50%);
  margin-top: 70rpx;
}
.content .call_btn {
  position: absolute;
  width: 300rpx;
  height: 300rpx;
  background-color: #fddb00;
  box-shadow: 0rpx 10rpx 40rpx 0rpx rgba(253, 219, 0, 0.5);
  border-radius: 50%;
  left: 50rpx;
  text-align: center;
  z-index: 5;
}

.content .call_btn .call_num {
  font-size: 40rpx;
  color: #444;
  line-height: 300rpx;
}

.content .call_btn .call_btn_text {
  height: 50rpx;
  padding-top: 30rpx;
  width: 100%;
}
.content .call_btn .call_btn_text image {
  width: 50rpx;
  height: 50rpx;
  display: block;
  margin:  0 auto;
}
/* 扫码 */
.code_ico {
	width: 120rpx;
	height: 120rpx;
	background-color: #ffffff;
	box-shadow: 0rpx 10rpx 80rpx 0rpx rgba(68, 68, 68, 0.15);
  border-radius: 50%;
  margin: 0 auto;
  overflow: hidden;
  margin-top: 104rpx;
}
.code_ico image {
  width: 50rpx;
  height: 50rpx;
  display: block;
  margin: 35rpx auto;
}
/* 已经满载-提示 */
.content .reset_num {
  height: 121rpx;
  line-height: 121rpx;
  text-align: center;
  font-size: 32rpx;
  color: #999;
  margin-top: 260rpx;
}

.nav{
  width: 100%;
  overflow: hidden;
  position: relative;
  top: 0;
  left: 0;
  z-index: 10;
}
.nav-title{
  width: 100%;
  height: 45px;
  line-height: 45px;
  text-align: center;
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 10;
  font-size:36rpx;
}
.nav .back{
  width: 22px;
  height: 22px;
  position: absolute;
  bottom: 0;
  left: 0;
  padding: 10px 15px;
}
.bg-white{
  background-color: #ffffff;
}
.bg-gray{
  background-color: rgba(250,250,250,1);
}
.overflow{
  overflow: auto;
}
.hidden{
  overflow: hidden;
}

.user_img {
  float: left;
  width: 70rpx;
	height: 70rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-top: 10rpx;
  margin-right: 20rpx;
  margin-left: 20rpx;
}
.user_img image {
  width: 50rpx;
	height: 50rpx;
  border-radius: 50%;
}
.user_name{
  float:left;
  font-size: 28rpx;
}
.user_num{
  float:left;
  font-size: 30rpx;
}

/* 遮罩 */
button::after{
  border:none;
}
.mask_box{
  width:100%;
  height:100%;
  position: fixed;
  background: transparent;
  z-index:999;
  top:130rpx;
}
.mask_mid{
  width:100%;
  height:30%;
  background: #fff;
  position: absolute;
  top:0;
  padding: 30rpx 0;
  text-align: center;
}
.mask_test{
  width:250rpx;
  height:100rpx;
  background:rgba(253,219,0,1);
  box-shadow:0px 10px 20px rgba(253,219,0,0.35);
  opacity:1;
  border-radius:50px;
  margin:40rpx auto;
}
.mask_today{
  width:250rpx;
  height:100rpx;
  background:rgba(34,34,34,1);
  box-shadow:0px 10px 20px rgba(34,34,34,0.23);
  opacity:1;
  border-radius:50px;
  color:#FDDB00;
  margin: 0 auto 40rpx auto;
}
.mask_mid text{
  font-size:28rpx;
  color:rgba(153,153,153,1);
  margin-top: 10rpx;
}