/* pages/complete_order/complete_order.wxss */
/* 订单列表 */
.order_content {
  padding: 0rpx 24rpx;
  box-sizing: border-box;
  margin-top: 14rpx;
}
.order_content .order_list {
  margin-bottom: 24rpx;
	background-color: #ffffff;
	box-shadow: 0rpx 10rpx 20rpx 0rpx rgba(68, 68, 68, 0.15);
	border-radius: 20rpx;
  box-sizing: border-box;
  padding: 20rpx 24rpx;
}
.order_content .order_list .order_toptxt {
  overflow: hidden;
  margin-bottom: 16rpx;
}
.order_content .order_list .order_toptxt .ft_text {
  float: left;
  font-size: 30rpx;
	color: #222222;
  max-width: 70%;
  overflow: hidden;
  text-overflow: ellipsis;
	white-space: nowrap;
}
.order_content .order_list .order_toptxt .rt_time {
  float: right;
  font-size: 24rpx;
	color: #999999;
}
.order_content .order_list .order_site {
  font-size: 24rpx;
	color: #999999;
}
button::after{
  border:none;
}
.callbackOrder{
  position: fixed;
  bottom: 40rpx;
  width:250rpx;
  height:100rpx;
  background:rgba(253,219,0,1);
  box-shadow:0px 10px 20px rgba(253,219,0,0.35);
  opacity:1;
  border-radius:50rpx;
  left:0;
  right:0;
  margin: auto;
  font-size: 36rpx;
  line-height: 100rpx;
}

.nav{
  width: 100%;
  overflow: hidden;
  position: relative;
  top: 0;
  left: 0;
  z-index: 10;
}
.nav-title{
  width: 100%;
  height: 45px;
  line-height: 45px;
  text-align: center;
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 10;
  font-size:36rpx;
}
.nav .back{
  width: 22px;
  height: 22px;
  position: absolute;
  bottom: 0;
  left: 0;
  padding: 10px 15px;
}
.bg-white{
  background-color: #ffffff;
}
.bg-gray{
  background-color: rgba(250,250,250,1);
}
.overflow{
  overflow: auto;
}
.hidden{
  overflow: hidden;
}

.user_img {
  float: left;
  width: 70rpx;
	height: 70rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-top: 10rpx;
  margin-right: 20rpx;
  margin-left: 20rpx;
}
.user_img image {
  width: 50rpx;
	height: 50rpx;
  border-radius: 50%;
}
.user_name{
  float:left;
  font-size: 28rpx;
}
.user_num{
  float:left;
  font-size: 30rpx;
}

/* 遮罩 */
button::after{
  border:none;
}
.mask_box{
  width:100%;
  height:100%;
  position: fixed;
  background: transparent;
  z-index:999;
  top: 66px;
}
.mask_mid{
  width:100%;
  height:30%;
  background: #fff;
  position: absolute;
  top:0;
  padding: 30rpx 0;
  text-align: center;
  box-shadow:0px 10px 10px rgba(170,170,170,0.23);
}
.mask_test{
  width:250rpx;
  height:100rpx;
  background:rgba(253,219,0,1);
  box-shadow:0px 10px 20px rgba(253,219,0,0.35);
  opacity:1;
  border-radius:50px;
  margin:40rpx auto;
}
.mask_today{
  width:250rpx;
  height:100rpx;
  background:rgba(34,34,34,1);
  box-shadow:0px 10px 20px rgba(34,34,34,0.23);
  opacity:1;
  border-radius:50px;
  color:#FDDB00;
  margin: 0 auto 40rpx auto;
}
.mask_mid text{
  font-size:28rpx;
  color:rgba(153,153,153,1);
  margin-top: 10rpx;
}
